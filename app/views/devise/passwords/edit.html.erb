<div id='user-form' class='col-sm-4 col-sm-offset-4'>
	<h2>修改密码</h2>

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name),
	               :html => { :method => :put }) do |f| %>
	
	  <%= devise_error_messages! %>
		
	  <%= f.hidden_field :reset_password_token %>
		
	  <div class="form-group">
			 <%= f.label :密码, "新密码" %> <i>(如不修改，请不要填写)</i><br />
	     <%= f.password_field :password, :autocomplete => "off", class:'form-control'  %>
		</div>

	  <div class="form-group">
			<%= f.label :确认密码 , "确认新密码" %><br />
	  	<%= f.password_field :password_confirmation, class:'form-control'  %>
	  </div>

	  <div><%= f.submit "修改密码", class:'btn btn-lg btn-primary' %></div>
	<% end %>

	<%= render "devise/shared/links" %>
	
</div>
